# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ecommerce_db

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=0

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# SMTP
SMTP_HOST=smtp.server.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_real_smtp_user
SMTP_PASS=your_real_smtp_password

EMAIL_SECURITY_ADDRESS="security@domain.com"
EMAIL_MANAGEMENT_ADDRESS="management@domain.com"

# Rate limiting
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window
